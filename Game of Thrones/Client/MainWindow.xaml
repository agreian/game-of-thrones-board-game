<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.RowSpan="2" Name="border">
            <Image Source="/Client;component/Resources/Map2.png" Name="imgMap" RenderTransformOrigin="0.5,0.5"/>
        </Border>
        
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
            <Image Grid.Column="1" Grid.Row="0" Name="imgInfluence" Source="/Client;component/Resources/Influence.png" />
            <Image Grid.Column="1" Grid.Row="1" Name="imgSupply" Source="/Client;component/Resources/Supply.png" />
            <Image Grid.Column="1" Grid.Row="2" Name="imgRoundVictory" Source="/Client;component/Resources/Round_Victory.png" />
        </StackPanel>

        <TextBlock Grid.Column="1" Grid.Row="4" Text="CHAT !" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
